{pkgs, ...}: {

  services.yabai = {
    enable = true;
    enableScriptingAddition = true;
    #package = "yabai-6.0.9";
    config = {
      auto_balance = "off";
      layout = "bsp"; #Puede ser bsp, stack o float
      #Configuracion padding
      bottom_padding = 5;
      left_padding = 5;
      right_padding = 5;
      top_padding = 5;
      window_gap = 5;
      
      split_ratio = "0.50";
      # new window spawns to the right if vertical split, or bottom if horizontal split
      window_placement = "second_child";
      window_topmost = "off";
      window_opacity = "off";
      window_shadow = "on";
      window_border = "off";
      #Mouse setting
      # center mouse on window with focus
      mouse_follows_focus = "on";
      # modifier for clicking and dragging with mouse
      mouse_modifier ="alt";
      # set modifier + left-click drag to move window
      mouse_action1 = "move";
      # set modifier + right-click drag to resize window
      mouse_action2 = "resize";
      # when window is dropped in center of another window, swap them (on edges it will split it)
      mouse_drop_action = "swap";
      #Para qye yabai sea consciente de sketchybar
      external_bar = "all:35:0";  #32 is for the height of sketchybar. If you change the height of sketchybar also change this number.
    };

    extraConfig = ''

      yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
      yabai -m signal --add event=window_focused action="sketchybar --trigger window_focus"

      # disable specific apps
      yabai -m rule --add app="^System Settings$" manage=off
      yabai -m rule --add app="^Configuración del Sistema$" manage=off
      yabai -m rule --add app="^Calculadora$" manage=off
      yabai -m rule --add app="^Numi$" manage=off
      yabai -m rule --add app="^KeePassXC$" manage=off
      yabai -m rule --add app="^Karabiner-Elements$" manage=off
      yabai -m rule --add app="^QuickTime Player$" manage=off

      #Abrir aplicaciones en escritorio especifico
      yabai -m rule --add app="^(Warp|ITerm2)$" space=^1
      yabai -m rule --add app="^WhatsApp$" space=^2
      yabai -m rule --add app="^Telegram$" space=2
      yabai -m rule --add app="^Vivaldi$" space=3

      # Social
      #yabai -m rule --add app="^(Slack|WhatsApp|Telegram|Microsoft Teams$" space=2

      #Asignar nombre a los escritorios
      yabai -m space 1 --label principal
      yabai -m space 2 --label chats
      yabai -m space 3 --label navegador

    '';

  };

  services.skhd = {
    enable = true;
    skhdConfig = ''

      # -- Changing Window Focus --

      # change window focus within space
      alt - j : yabai -m window --focus south
      alt - k : yabai -m window --focus north
      alt - h : yabai -m window --focus west
      alt - l : yabai -m window --focus east

      #change focus between external displays (left and right)
      alt - s: yabai -m display --focus west
      alt - g: yabai -m display --focus east

      # -- Modifying the Layout --

      # rotate layout clockwise
      shift + alt - r : yabai -m space --rotate 90

      # flip along y-axis
      shift + alt - y : yabai -m space --mirror y-axis

      # flip along x-axis
      shift + alt - x : yabai -m space --mirror x-axis
   
      # toggle window float
      shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

      # -- Modifying Window Size --

      # maximize a window
      shift + alt - m : yabai -m window --toggle zoom-fullscreen

      #Este modo cubre toda la pantalla incluyendo barra y dock
      shift + alt - f : yabai -m window --toggle native-fullscreen

      # toggle window parent zoom
      alt - d : yabai -m window --toggle zoom-parent

      # balance out tree of windows (resize to occupy same area)
      shift + alt - b : yabai -m space --balance

      # Cambiar split_ratio al 50%
      cmd - 5 : yabai -m config split_ratio 0.5 && yabai --restart-service

      #cmd - 7 : yabai -m config split_ratio 0.7 && yabai --restart-service

      cmd - 1 : yabai -m window --ratio abs:0.50

      # === Resize Mode ===
      # Set resize border color
      :: resize @ : yabai -m config active_window_border_color 0xFFFF00FF

      # toggle resize mode
      resize < alt - z ; default
      default < alt - z ; resize

      # resize commands
      resize < left : yabai -m window --resize left:-20:0; \
                        yabai -m window --resize right:-20:0
      resize < down : yabai -m window --resize bottom:0:20; \
                        yabai -m window --resize top:0:20
      resize < up   : yabai -m window --resize top:0:-20; \
                       yabai -m window --resize bottom:0:-20
      resize < right : yabai -m window --resize right:20:0; \
                        yabai -m window --resize left:20:0


      # -- Moving Windows Around --

      # swap windows Within Space (intercambia las ventanas dentro del escritorio)
      shift + alt - j : yabai -m window --swap south
      shift + alt - k : yabai -m window --swap north
      shift + alt - h : yabai -m window --swap west
      shift + alt - l : yabai -m window --swap east


      # move window Within Space and split
      ctrl + alt - j : yabai -m window --warp south
      ctrl + alt - k : yabai -m window --warp north
      ctrl + alt - h : yabai -m window --warp west
      ctrl + alt - l : yabai -m window --warp east


      # move window Across Displays to left and right
      shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
      shift + alt - g : yabai -m window --display east; yabai -m display --focus east;


      # move window to prev and next space
      shift + alt - p : yabai -m window --space prev;
      shift + alt - n : yabai -m window --space next;


      # move window to space #
      #shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
      shift + alt - 1 : yabai -m window --space 1;
      shift + alt - 2 : yabai -m window --space 2;
      shift + alt - 3 : yabai -m window --space 3;
      #shift + alt - 4 : yabai -m window --space 4;
      hyper - 4 : yabai -m window --space 4;
      shift + alt - 5 : yabai -m window --space 5;
      shift + alt - 6 : yabai -m window --space 6;
      shift + alt - 7 : yabai -m window --space 7;


      #Otras modificaciones

      # fast focus desktop
      #alt - z : yabai -m space --focus recent
      # fast focus desktop
      cmd + alt - z : yabai -m space --focus prev
      cmd + alt - x : yabai -m space --focus next


      # Cambia propiedades de la ventana actual
      # sticky: Pega la ventana en todos los escritorios virtuales
      # topmost: Ubica la ventana sobre las demás
      # pip: Coloca la ventana en modo picture in picture
      hyper - s : yabai -m window --toggle sticky;\
                yabai -m window --toggle topmost;\
               yabai -m window --toggle pip


      # Permite dividir o unir una ventana según su estado actual
      alt - e : yabai -m window --toggle split


      # change layout of desktop
      ctrl + alt - b : yabai -m space --layout bsp
      ctrl + alt - f : yabai -m space --layout float


      # Set insertion point for focused container
      shift + ctrl + alt - h : yabai -m window --insert west   #(Izquierda)
      shift + ctrl + alt - j : yabai -m window --insert south  #(Arriba)
      shift + ctrl + alt - k : yabai -m window --insert north  #(Abajo)
      shift + ctrl + alt - l : yabai -m window --insert east   #(Derecha)


      # stop/start/restart yabai
      ctrl + alt - q : yabai --stop-service
      ctrl + alt - s : yabai --start-service
      ctrl + alt - r : yabai --restart-service


      #hyper - w : yabai -m signal --add event=window_created action=".config/yabai/mover_whatsapp.sh"

    '';
  };


  services.sketchybar = {
    enable = true;
    config = builtins.readFile ./sketchybar/sketchybarrc;
  };
}
